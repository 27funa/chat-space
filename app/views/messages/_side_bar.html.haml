.side-bar
  .side-bar__user-name
    .top-items
      %p.top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.icon-btn
          = link_to new_group_path do
            = icon('far', 'edit')
            %span<>
        %li.icon-btn
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
            %span<>
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-list
        = link_to group_messages_path(group) do
          .group-list__name
            = group.name
          .group-list__text
            = group.show_last_message